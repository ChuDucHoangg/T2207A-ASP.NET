@model T2207A_MVC.Models.ProductEditModel;
@{
    ViewData["Title"] = "Edit product";
}


<section class="section">
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                @using (Html.BeginForm("Edit", "Product", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.id)
                    <div class="mb-3">
                        @Html.LabelFor(m => m.name, new { @class = "col-sm-2 col-form-label" })
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.price, new { @class = "col-sm-2 col-form-label" })
                        @Html.TextBoxFor(m => m.price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.price, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.description, new { @class = "col-sm-2 col-form-label" })
                        @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.description, "", new { @class = "text-danger" })
                    </div>

                    <div class="row mb-3">
                        @Html.LabelFor(m => m.category_id, new { @class = "col-sm-2 col-form-label" })
                        @Html.DropDownListFor(m => m.category_id, ViewBag.Categories as SelectList, "Chon danh muc", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.category_id, "", new { @class = "text-danger" })
                    </div>

                    <div class="row mb-3">
                        @Html.LabelFor(m => m.brand_id, new { @class = "col-sm-2 col-form-label" })
                        @Html.DropDownListFor(m => m.brand_id, ViewBag.Brands as SelectList, "Chon danh muc", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.brand_id, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary">Update @Model.name</button>
                    <a href="/product" class="btn btn-success">List product</a>
                }
            </div>
            <div class="col"></div>
        </div>
    </div>
</section>