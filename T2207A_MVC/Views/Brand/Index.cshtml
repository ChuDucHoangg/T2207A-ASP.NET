@model List<T2207A_MVC.Entities.Brand>
@{

}
<h1>Brand Table</h1>
<a asp-controller="Brand" asp-action="Create" class="btn btn-primary">
    Create new Brand
</a>
<div class="col-6">
    <table class="table">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Logo</th>
        <th>Action</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>
                        <img src="~/uploads/@item.logo" width="100px" height="60px" alt="" />
                    </td>
                    <td>
                        <a href="@Url.ActionLink("Edit","Brand",new {id=item.id})" class="btn btn-info">Edit</a>
                        <a href="@Url.ActionLink("Delete","Brand",new {id=item.id})"
                           onclick="return confirm('Xac nhan xoa @item.name')"
                           class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>